[flake8]
ignore = D203,W293,W291
exclude =
    # No need to traverse our git directory
    .git,
    # ENV
    .venv,
    # There's no value in checking cache directories
    __pycache__,
    # This contains our built
    build
per-file-ignores =
    # imported but unused
    __init__.py: F401
max-line-length = 100
max-complexity = 10